<% else %>

<style>
body {background-color: red !important;}
</style>

<div class="text">
  <h2>That's not right!</h2>
</div>
  <div style="background-color:red;", size="550x550">
  <%= image_tag("sad", size: "500x350", color: "red") %>
  </div>
<% end %>

<% if @next_question %>
  <%= link_to 'Next question', @next_question %>
<% else %>
  <%= link_to 'Done', questions_path %>
<% end %>
