<% if @correct %>
<div class="text">
  <h2>That's Correct!</h2>
  </div>
  <style>
body {background-color: green !important;}
  </style>
  <div style="background-color:green;", size="550x550", class="picture">

  <%= image_tag("smile", size: "500x350", color: "green")%>
