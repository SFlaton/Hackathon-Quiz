
<p>
  <strong>Questions</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Question:</strong>
  <%= @question.content %>
</p>


<div class="buttons">
<%= link_to "True", results_question_path(@question, score: 1), id:"true", class:"shadow" %>
</div>

<div class="buttons">
<%= link_to "False", results_question_path(@question, score: 0), id:"false", class:"shadow" %>
</div>
<div class="buttons">
<%= link_to 'Back', questions_path, id:"buttonback", class:"shadow" %>
</div>
